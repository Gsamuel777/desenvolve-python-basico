# 2. SOLUÇÃO: CÁLCULO DA MÉDIA DAS IDADES
# ==============================================================================
print("\n" + "="*40)
print("2. CÁLCULO DA MÉDIA DAS IDADES")
print("="*40)

while True:
    try:
        N = int(input("2. MÉDIA IDADES: Digite a quantidade de respondentes (N): "))
        if N > 0:
            break
        else:
            print("N deve ser positivo.")
    except ValueError:
        print("Entrada inválida. Digite um número inteiro.")

soma_idades = 0

for i in range(1, N + 1):
    while True:
        try:
            idade = int(input(f"2. MÉDIA IDADES: Digite a idade do respondente {i}: "))
            if idade >= 0:
                soma_idades += idade
                break
            else:
                print("Idade não pode ser negativa.")
        except ValueError:
            print("Entrada inválida. Digite a idade como um número inteiro.")

if N > 0:
    media_idades = soma_idades / N
    print(f"2. MÉDIA IDADES: A média das idades é: {media_idades:.2f}")
else:
    print("2. MÉDIA IDADES: N é zero, média não calculada.")


