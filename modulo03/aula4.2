# 3. SOLUÇÃO: EXERCÍCIO DE MARATONA (BEECROWD 1094 - EXPERIÊNCIAS)
# Adaptação da entrada para ambiente local, usando input()
# ==============================================================================
print("\n" + "="*40)
print("3. BEECROWD 1094: EXPERIÊNCIAS")
print("="*40)

try:
    N = int(input("3. MARATONA: Digite a quantidade de experimentos (N): "))
except ValueError:
    print("Entrada inválida. Pulando para o próximo exercício.")
    N = 0

total_coelhos = 0
total_ratos = 0
total_sapos = 0

print("3. MARATONA: Digite a quantia e o tipo (ex: '10 C' ou '6 R').")
for _ in range(N):
    try:
        linha = input(f"Experimento {_ + 1}/{N}: ").split()
        if len(linha) != 2:
            print("Formato incorreto. Tente novamente.")
            continue
            
        quantia = int(linha[0])
        tipo = linha[1].upper()

        if tipo == 'C':
            total_coelhos += quantia
        elif tipo == 'R':
            total_ratos += quantia
        elif tipo == 'S':
            total_sapos += quantia
        else:
            print(f"Tipo '{tipo}' inválido. Use C, R ou S.")

    except ValueError:
        print("Entrada inválida (quantia não é número).")
        
total_cobaias = total_coelhos + total_ratos + total_sapos

if total_cobaias > 0:
    perc_coelhos = (total_coelhos / total_cobaias) * 100
    perc_ratos = (total_ratos / total_cobaias) * 100
    perc_sapos = (total_sapos / total_cobaias) * 100
else:
    perc_coelhos = perc_ratos = perc_sapos = 0.0

print("\n3. MARATONA - RESULTADO:")
print(f"Total: {total_cobaias} cobaias")
print(f"Total de coelhos: {total_coelhos}")
print(f"Total de ratos: {total_ratos}")
print(f"Total de sapos: {total_sapos}")
print(f"Percentual de coelhos: {perc_coelhos:.2f} %")
print(f"Percentual de ratos: {perc_ratos:.2f} %")
print(f"Percentual de sapos: {perc_sapos:.2f} %")
