import random
import math
import datetime
import emoji

def diferenca_absoluta():
    """1ï¸âƒ£ DiferenÃ§a absoluta entre dois nÃºmeros decimais"""
    num1 = float(input("Digite o primeiro nÃºmero: "))
    num2 = float(input("Digite o segundo nÃºmero: "))
    diferenca = round(abs(num1 - num2), 2)
    print(f"\nA diferenÃ§a absoluta entre os nÃºmeros Ã©: {diferenca}\n")

def raiz_quadrada_soma():
    """2ï¸âƒ£ Gera n nÃºmeros aleatÃ³rios e calcula a raiz quadrada da soma"""
    n = int(input("Quantos nÃºmeros aleatÃ³rios deseja gerar? "))
    soma = 0
    print("\nNÃºmeros gerados:")
    for i in range(n):
        valor = random.randint(0, 100)
        soma += valor
        print(f"  Valor {i+1}: {valor}")
    raiz = math.sqrt(soma)
    print(f"\nSoma total: {soma}")
    print(f"Raiz quadrada da soma: {round(raiz, 2)}\n")

def jogo_adivinhacao():
    """3ï¸âƒ£ Jogo de adivinhaÃ§Ã£o"""
    numero_secreto = random.randint(1, 10)
    print("\nJogo de adivinhaÃ§Ã£o iniciado!")
    while True:
        palpite = int(input("Adivinhe o nÃºmero entre 1 e 10: "))
        if palpite > numero_secreto:
            print("Muito alto, tente novamente!\n")
        elif palpite < numero_secreto:
            print("Muito baixo, tente novamente!\n")
        else:
            print(f"Correto! O nÃºmero Ã© {numero_secreto}.\n")
            break

def data_hora_atual():
    """4ï¸âƒ£ Exibe data e hora atuais formatadas"""
    agora = datetime.datetime.now()
    data = f"{agora.day:02d}/{agora.month:02d}/{agora.year}"
    hora = f"{agora.hour:02d}:{agora.minute:02d}"
    print(f"\nData: {data}")
    print(f"Hora: {hora}\n")

def sistema_emojis():
    """5ï¸âƒ£ Sistema de mensagens com emojis"""
    print("\nEmojis disponÃ­veis:")
    print("â¤ï¸  - :red_heart:")
    print("ðŸ‘  - :thumbs_up:")
    print("ðŸ¤”  - :thinking_face:")
    print("ðŸ¥³  - :partying_face:\n")
    frase = input("Digite uma frase e ela serÃ¡ emojizada:\n")
    frase_emojizada = emoji.emojize(frase, language='alias')
    print("\nFrase emojizada:")
    print(frase_emojizada, "\n")

# ============================================================
# Menu principal
# ============================================================

def menu():
    while True:
        print("===============================================")
        print("         ðŸŒŸ MENU DE PROGRAMAS EM PYTHON ðŸŒŸ")
        print("===============================================")
        print("1 - DiferenÃ§a absoluta entre dois nÃºmeros")
        print("2 - Raiz quadrada da soma de nÃºmeros aleatÃ³rios")
        print("3 - Jogo de adivinhaÃ§Ã£o")
        print("4 - Exibir data e hora atuais")
        print("5 - Sistema de mensagens com emojis")
        print("0 - Sair")
        print("===============================================")

        opcao = input("Escolha uma opÃ§Ã£o: ")

        if opcao == "1":
            diferenca_absoluta()
        elif opcao == "2":
            raiz_quadrada_soma()
        elif opcao == "3":
            jogo_adivinhacao()
        elif opcao == "4":
            data_hora_atual()
        elif opcao == "5":
            sistema_emojis()
        elif opcao == "0":
            print("\nEncerrando o programa... AtÃ© logo! ðŸ‘‹")
            break
        else:
            print("\nOpÃ§Ã£o invÃ¡lida! Tente novamente.\n")

# ExecuÃ§Ã£o principal
if __name__ == "__main__":
    menu()
